@model IEnumerable<Avery_MIS4200.Models.Movies>

@{
    ViewBag.Title = "Movie Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MovieName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DirectorFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DirectorLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MovieMade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Genre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MovieName)
    </td>
    <th>
        @Html.DisplayNameFor(model => model.DirectorFirstName)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.DirectorLastName)
    </th>
    <td>
        @Html.DisplayFor(modelItem => item.MovieMade)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.MovieID }) |
        @Html.ActionLink("Details", "Details", new { id = item.MovieID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.MovieID })
    </td>
</tr>
}

</table>
