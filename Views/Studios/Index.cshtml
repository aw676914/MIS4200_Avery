@model IEnumerable<Avery_MIS4200.Models.Studio>

@{
    ViewBag.Title = "List Of Studios";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudioName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Budget)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudioName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Budget)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StudioID }) |
            @Html.ActionLink("Details", "Details", new { id=item.StudioID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StudioID })
        </td>
    </tr>
}

</table>
